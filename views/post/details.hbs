<body class="body-details">
<div class="container" style="margin-top: 20px; z-index: 12; position: relative; margin-bottom: 70px">
  <div class="row" style="z-index: 10;position: relative">
<a href="/post/post" class="btn btn-danger mb-3 mt-5" style="background-color: #A5B0CBff;border: none"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
  </div>
<div class="row">
  <div class="col-md-6"><h1 class="title">{{name}}</h1></div>
  <div class="col-md-3">
<div class="image-note">
       <img src="/images/notes.png" alt="" class="img-fluid ml-5" width="100px" height="100px" >
    </div>
    </div>  
  <div class="col-md-3">
   <div class="d-flex ">

<a href="/post/{{_id}}/edit" class="btn btn-primary mr-2" style="background-color: #fea6fe; border: none">Edit <i class="fa fa-pencil" aria-hidden="true"></i> </a>

<form action="/post/{{_id}}/delete" method="post" >
<button class="btn btn-danger"style="background-color: #A5B0CBff;border: none">Delete <i class="fa fa-trash-o" aria-hidden="true"></i></button>
</form>

</div>
</div>
</div>



<p class="">Author: {{author.username}}</p><br>
<p class="">{{date}}</p>
<hr style="border:1px solid #fff">
<p style="z-index: 100;">{{description}}</p>

<hr style="border:1px solid #fff">

{{#unless comments}}
  <p>No comments yet!</p>
{{/unless}}
 <h1>Comments</h1>
{{#each comments}}
  <p style="background-color: rgb(209, 28, 209);padding: 10px; border-radius: 10px"><b>{{this.author.username}}:</b> {{this.content}}</p>
{{/each}}
 

<hr style="border:1px solid #fff">
<h3>Add comment</h3>
 
<form action="/comment/post/{{_id}}/comment" method="post" class="mt-5 mb-5">
<div class="mb-3"></div>
 
  <textarea name="content" cols="30" rows="2"class="form-control"></textarea>
 
  <button class="btn btn-primary mt-3 mb-5" style="background-color: #dc5cb7;border:none">Send Comment <i class="fa fa-paper-plane" aria-hidden="true"></i></button>
  </form>
</form>
 
</div>

</body>

