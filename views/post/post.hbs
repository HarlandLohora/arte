<body class="body-post ">

<div class="container ">
  <div class="row ">
    <div class="col-md-8">
      <h2 class="title mt-5" style="margin-top: 0px;color:#fff;">All Post</h2>
    </div>
    <div class="col-md-4 mt-5">
       <a href="/auth/user-profile" class="btn btn-danger" style="margin-top: 0px;background-color: #dc5cb7; border: none"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
       <a href="/post/create" class="btn btn-primary" style="margin-top: 0px;background-color: #fe8ab8; border: none">Create Post <i class="fa fa-folder-open" aria-hidden="true"></i></a>
       <a href="/" class="btn btn-primary" style="margin-top: 0px;background-color: #fe8ab8; border: none">Home Page <i class="fa fa-home" aria-hidden="true"></i></a>
    </div>
  </div>

<div class="row">
{{#each post}}
<div class="col-md-4 mb-5" >
     <div class="card shadow" style="width: 18rem;background: #c6e2ed">
       
                  
        <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="text-muted">Author: <span style="color: #000;"> {{author.username}}</span> </p>
            <p class="card-text">{{extract}}</p>
            <a href="/post/{{_id}}" class="btn text-center" style="background-color: #fe8ab8; border: none;color: #fff">View More <i class="fa fa-eye" aria-hidden="true"></i></a>
           
            <a href="/post/{{_id}}/edit" class="btn btn-primary btn-edit" style="background-color: #fea6fe; border: none">Edit <i class="fa fa-pencil" aria-hidden="true"></i></a>
             
        </div>
    </div>
</div>
{{/each}}

</div>
</div>
</body>
