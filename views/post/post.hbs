<div class="container ">
  <div class="row">
    <div class="col-md-8">
      <h2 class="title" style="margin-top: 0px;">All Post</h2>
    </div>
    <div class="col-md-4">
       <a href="/auth/user-profile" class="btn btn-danger" style="margin-top: 0px">Back</a>
       <a href="/post/create" class="btn btn-primary" style="margin-top: 0px">Create Post</a>
       <a href="/" class="btn btn-primary" style="margin-top: 0px">Home Page</a>
    </div>
  </div>

<div class="row">
{{#each post}}
<div class="col-md-4 mb-5">
     <div class="card shadow" style="width: 18rem;">
        <div class="inner">
            <img src="{{image}}" class="card-img-top" alt="...">
        </div>
                  
        <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="text-muted">Author: <span style="color: #000;"> {{author}}</span> </p>
            <p class="card-text">{{extract}}</p>
            <a href="/post/{{_id}}" class="btn text-center" style="background-color: #c6e2ed; color: #000;">View More</a>
           
            <a href="/post/{{_id}}/edit" class="btn btn-primary btn-edit" style="*display: none">Edit</a>
             
        </div>
    </div>
</div>
{{/each}}

</div>
</div>